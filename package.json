{
  "name": "@common-origin/design-system",
  "version": "2.2.0",
  "description": "Common Origin Design System - Framework-agnostic atomic design components with comprehensive WCAG 2.2 AA testing",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/tokens/index.esm.js",
      "require": "./dist/tokens/index.js",
      "types": "./dist/tokens/tokens.d.ts"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:package": "rollup -c",
    "build:tokens": "node config/style-dictionary.config.js",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "docs:generate": "node lib/docgen/generate.js",
    "docs:dev": "npm run build:tokens && npm run dev",
    "verify:types": "node scripts/verify-types.cjs",
    "verify:no-nextjs": "node scripts/verify-no-nextjs-deps.cjs",
    "prepublishOnly": "npm run build:tokens && npm run build:package && npm run verify:types && npm run verify:no-nextjs",
    "release": "npm publish --provenance --access public",
    "release:create": "./scripts/release.sh"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "styled-components": "^6.0.0"
  },
  "dependencies": {
    "@hotjar/browser": "^1.0.9",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "next": "latest",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "ts-morph": "^27.0.2",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^18.0.3",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "auto-changelog": "^2.5.0",
    "babel-jest": "^30.0.2",
    "babel-plugin-styled-components": "^2.1.4",
    "conventional-changelog-angular": "^8.1.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "jest": "^30.0.2",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^30.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rollup": "^3.20.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "style-dictionary": "^3.8.0",
    "styled-components": "^6.1.1"
  },
  "keywords": [
    "design-system",
    "react",
    "styled-components",
    "accessibility",
    "atomic-design",
    "tokens",
    "components"
  ],
  "author": "Common Origin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/common-origin/common-origin-design-system.git"
  }
}
